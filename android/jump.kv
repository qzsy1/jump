#:kivy 1.0

<MainScreen>:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    # 标题样式
    Label:
        text: "微信跳一跳助手"
        size_hint: 1, None
        height: 60
        font_size: 28
        bold: True
        color: 0.2, 0.2, 0.2, 1

    # 分辨率输入框样式
    TextInput:
        size_hint: 1, None
        height: 50
        background_color: 0.95, 0.95, 0.95, 1
        foreground_color: 0.2, 0.2, 0.2, 1
        font_size: 18
        padding: [10, 10]

    # 配置标签样式
    Label:
        halign: 'left'
        font_size: 14
        color: 0.5, 0.5, 0.5, 1

    # 分辨率提示标签
    Label:
        halign: 'left'
        font_size: 12
        color: 0.6, 0.6, 0.6, 1
        text_size: self.width - 20, None

    # 滑块样式
    Slider:
        size_hint: 1, None
        height: 40
        background_color: 0.9, 0.9, 0.9, 1
        cursor_color: 0.2, 0.7, 0.3, 1

    # 系数显示标签样式
    Label:
        font_size: 18
        color: 0.2, 0.2, 0.2, 1

    # 开始按钮样式
    Button:
        size_hint: 1, None
        height: 60
        background_color: 0.2, 0.7, 0.3, 1
        color: 1, 1, 1, 1
        font_size: 22

    # 日志标签样式
    Label:
        halign: 'left'
        valign: 'top'
        color: 0.3, 0.3, 0.3, 1

<FloatingButton>:
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 0.9
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20,]
